{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceRoot}/cmd/pipeline/main.go",
            "env": {
                "PIPELINE_CONFIG_DIR": "${workspaceRoot}/config",
                "VAULT_ADDR": "http://127.0.0.1:8200"
            },
            "args": []
        },
        {
            "name": "Launch worker",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceRoot}/cmd/worker/main.go",
            "env": {
                "PIPELINE_CONFIG_DIR": "${workspaceRoot}/config",
                "VAULT_ADDR": "http://127.0.0.1:8200"
            },
            "args": []
        },
        {
            "name": "Remote Docker",
            "type": "go",
            "request": "launch",
            "mode": "remote",
            "remotePath": "/pipeline-debug",
            "port": 40000,
            "host": "127.0.0.1",
             "program": "${workspaceRoot}/cmd/pipeline/main.go",
             "env": {},
             "args": []
        }
    ]
}
