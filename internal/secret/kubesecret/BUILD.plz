go_library(
    name = "kubesecret",
    srcs = glob(
        ["*.go"],
        exclude = ["*_test.go"],
    ),
    visibility = ["PUBLIC"],
    deps = [
        "//internal/secret/secrettype",
        "//src/secret",
        "//third_party/go:emperror.dev__errors",
        "//third_party/go:k8s.io__api",
        "//third_party/go:k8s.io__apimachinery",
    ],
)

go_test(
    name = "test",
    srcs = glob(["*_test.go"]),
    external = True,
    deps = [
        ":kubesecret",
        "//third_party/go:github.com__stretchr__testify",
        "//third_party/go:k8s.io__api",
        "//third_party/go:k8s.io__apimachinery",
    ],
)
